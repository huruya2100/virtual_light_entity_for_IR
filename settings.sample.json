{
    "mqtt": {
        "host": "your_mqtt_host",
        "port": 1883,
        "username": "your_mqtt_username",
        "password": "your_mqtt_password"
    },
    "HomeAssistant": {
        "url": "http://your_home_assistant_url",
        "token": "your_home_assistant_token"
    },
    "lights": {
        "ids": ["living_room", "bedroom", "kitchen"],
        "living_room": {
            "mqtt_light_topic": "home/living_room/light",
            "mqtt_brightness_topic": "home/living_room/brightness",
            "ir_remote_id": "living_room_ir_remote_id",
            "device_id": "living_room_device_id",
            "script_name": {
                "on_service": "script.living_room_light_on",
                "off_service": "script.living_room_light_off",
                "brightness_up_service": "script.living_room_light_brightness_up",
                "brightness_down_service": "script.living_room_light_brightness_down"
            },
            "lx_to_brightness": {
                "0": {
                    "min": 0,
                    "max": 90
                },
                "1": {
                    "min": 90,
                    "max": 180
                },
                "2": {
                    "min": 180,
                    "max": 270
                },
                "3": {
                    "min": 270,
                    "max": 360
                },
                "4": {
                    "min": 360,
                    "max": 500
                },
                "5": {
                    "min": 500,
                    "max": 1500
                }
            }
        },
        "bedroom": {
            "mqtt_light_topic": "home/bedroom/light",
            "mqtt_brightness_topic": "home/bedroom/brightness",
            "ir_remote_id": "bedroom_ir_remote_id",
            "device_id": "bedroom_device_id",
            "script_name": {
                "on_service": "script.bedroom_light_on",
                "off_service": "script.bedroom_light_off",
                "brightness_up_service": "script.bedroom_light_brightness_up",
                "brightness_down_service": "script.bedroom_light_brightness_down"
            },
            "lx_to_brightness": {
                "0": {
                    "min": 0,
                    "max": 90
                },
                "1": {
                    "min": 90,
                    "max": 180
                },
                "2": {
                    "min": 180,
                    "max": 270
                },
                "3": {
                    "min": 270,
                    "max": 360
                },
                "4": {
                    "min": 360,
                    "max": 500
                },
                "5": {
                    "min": 500,
                    "max": 1500
                }
            }
        },
        "kitchen": {
            "mqtt_light_topic": "home/kitchen/light",
            "mqtt_brightness_topic": "home/kitchen/brightness",
            "ir_remote_id": "kitchen_ir_remote_id",
            "device_id": "kitchen_device_id",
            "script_name": {
                "on_service": "script.kitchen_light_on",
                "off_service": "script.kitchen_light_off",
                "brightness_up_service": "script.kitchen_light_brightness_up",
                "brightness_down_service": "script.kitchen_light_brightness_down"
            },
            "lx_to_brightness": {
                "0": {
                    "min": 0,
                    "max": 90
                },
                "1": {
                    "min": 90,
                    "max": 180
                },
                "2": {
                    "min": 180,
                    "max": 270
                },
                "3": {
                    "min": 270,
                    "max": 360
                },
                "4": {
                    "min": 360,
                    "max": 500
                },
                "5": {
                    "min": 500,
                    "max": 1500
                }
            }
        }
    }
}